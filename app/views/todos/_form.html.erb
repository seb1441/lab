<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :title, id: :todo_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :description, id: :todo_description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :user_id, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.select :user_id, options_for_select(User.all.map{|u|[u.username, u.id]}), class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%#= form.submit, "Create/Update To-do", class: "btn btn-primary" %>
    <%= form.submit "Create To-do", class: "btn btn-primary" if action_name == "new" %>
    <%= form.submit "Update To-do", class: "btn btn-primary" if action_name == "edit" %>
  </div>
<% end %>
